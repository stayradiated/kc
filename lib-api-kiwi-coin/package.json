{
  "private": true,
  "name": "@volatile/kiwi-coin-api",
  "version": "1.0.1",
  "description": "A minimal kiwi-coin.com API client",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stayradiated/volatile.git"
  },
  "keywords": [
    "kiwi-coin.com",
    "api"
  ],
  "author": {
    "name": "George Czabania",
    "email": "george@czabania.com"
  },
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/stayradiated/volatile/issues"
  },
  "homepage": "https://github.com/stayradiated/volatile#readme",
  "dependencies": {
    "@northscaler/better-error": "0.1.0-dev.10",
    "@stayradiated/error-boundary": "1.10.0",
    "@zwolf/prism": "2.13.0",
    "debug": "4.3.3",
    "ky": "0.28.7",
    "ky-universal": "0.9.1",
    "luxon": "2.2.0",
    "p-limit": "4.0.0",
    "p-queue": "7.1.0"
  },
  "devDependencies": {
    "@types/debug": "4.1.7",
    "@types/node": "17.0.2",
    "ava": "3.15.0",
    "del-cli": "4.0.1",
    "nock": "13.2.1",
    "typescript": "4.5.4",
    "xo": "0.47.0"
  },
  "scripts": {
    "tidy": "xo --fix",
    "test": "echo 'no files to test...'",
    "build": "del-cli dist && tsc"
  },
  "__comment": "The following configs are managed by `npx @stayradiated/jsconfig`",
  "ava": {
    "verbose": true
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "prettier": true,
    "rules": {
      "ava/assertion-arguments": "off",
      "ava/no-ignored-test-files": [
        "error",
        {
          "files": [
            "**/src/**/*.test.ts"
          ],
          "extensions": [
            "ts"
          ]
        }
      ],
      "unicorn/prefer-node-protocol": "off"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  }
}
