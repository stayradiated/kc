{
  "private": true,
  "name": "@volatile/kiwi-coin-api",
  "version": "1.0.1",
  "description": "A minimal kiwi-coin.com API client",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stayradiated/volatile.git"
  },
  "keywords": [
    "kiwi-coin.com",
    "api"
  ],
  "author": {
    "name": "George Czabania",
    "email": "george@czabania.com"
  },
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/stayradiated/volatile/issues"
  },
  "homepage": "https://github.com/stayradiated/volatile#readme",
  "dependencies": {
    "@stayradiated/error-boundary": "4.0.0",
    "@volatile/kanye": "workspace:*",
    "@zwolf/prism": "2.13.0",
    "date-fns": "2.29.2",
    "date-fns-tz": "1.3.7",
    "debug": "4.3.4",
    "p-queue": "7.3.0"
  },
  "devDependencies": {
    "@types/debug": "4.1.7",
    "@types/node": "18.7.14",
    "ava": "4.3.3",
    "typescript": "4.8.2",
    "xo": "0.52.3"
  },
  "scripts": {
    "tidy": "xo --fix",
    "test": "ava",
    "build": "rm -rf ./dist && tsc"
  },
  "__comment": "The following configs are managed by `@stayradiated/jsconfig`",
  "ava": {
    "verbose": true
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "prettier": true,
    "rules": {
      "ava/assertion-arguments": "off",
      "ava/no-ignored-test-files": [
        "error",
        {
          "files": [
            "**/src/**/*.test.ts"
          ],
          "extensions": [
            "ts"
          ]
        }
      ]
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  }
}
