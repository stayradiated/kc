{
  "name": "@volatile/keyring",
  "version": "1.0.0",
  "description": "Securely encrypt data with support for key rotation.",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "ava",
    "tidy": "xo --fix",
    "build": "del-cli dist && tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stayradiated/volatile.git"
  },
  "author": {
    "name": "George Czabania",
    "email": "george@czabania.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stayradiated/volatile/issues"
  },
  "homepage": "https://github.com/stayradiated/volatile#readme",
  "devDependencies": {
    "@types/node": "18.7.3",
    "ava": "4.3.1",
    "del-cli": "5.0.0",
    "eslint-plugin-fp": "2.3.0",
    "typescript": "4.7.4",
    "xo": "0.51.0"
  },
  "__comment": "The following configs are managed by `npx @stayradiated/jsconfig`",
  "ava": {
    "verbose": true
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "prettier": true,
    "plugins": [
      "fp"
    ],
    "extends": [
      "plugin:fp/recommended"
    ],
    "rules": {
      "ava/assertion-arguments": "off",
      "ava/no-ignored-test-files": [
        "error",
        {
          "files": [
            "**/src/**/*.test.ts"
          ],
          "extensions": [
            "ts"
          ]
        }
      ],
      "unicorn/prefer-node-protocol": "off",
      "fp/no-unused-expression": "off",
      "fp/no-nil": "off",
      "fp/no-loops": "off",
      "fp/no-mutation": "off"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "dependencies": {
    "@stayradiated/error-boundary": "2.1.0"
  }
}
