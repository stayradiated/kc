{
  "name": "@volatile/svc-server",
  "private": true,
  "author": {
    "name": "George Czabania",
    "email": "george@czabania.com"
  },
  "license": "GPL-3.0",
  "type": "module",
  "scripts": {
    "pretest": "${npm_execpath} run migrate:test migrate",
    "test": "env-cmd --file=./.env.test ava",
    "tidy": "xo --fix --ignore ./src/zapatos",
    "build": "del-cli ./dist && tsc",
    "build:zapatos": "zapatos",
    "build:ncc": "mv package.json package.json.tmp; del-cli ./dist && ncc build --no-source-map-register --transpile-only ./src/index.ts; mv package.json.tmp package.json",
    "start": "NODE_ENV=production node --require 'dotenv/config' ./dist/index.js",
    "migrate": "env-cmd graphile-migrate",
    "migrate:test": "env-cmd --file=./.env.test graphile-migrate"
  },
  "devDependencies": {
    "@types/bcrypt": "5.0.0",
    "@types/debug": "4.1.7",
    "@types/nodemailer": "6.4.5",
    "@types/pg": "8.6.5",
    "@types/qrcode": "1.5.0",
    "@types/sinon": "10.0.13",
    "@vercel/ncc": "0.34.0",
    "ava": "4.3.1",
    "del-cli": "5.0.0",
    "env-cmd": "10.1.0",
    "graphile-migrate": "1.4.0",
    "nock": "13.2.9",
    "sinon": "14.0.0",
    "timekeeper": "2.2.0",
    "type-fest": "2.18.1",
    "typescript": "4.7.4",
    "xo": "0.51.0"
  },
  "dependencies": {
    "@northscaler/better-error": "0.1.0-dev.10",
    "@stayradiated/error-boundary": "2.1.0",
    "@volatile/dasset-api": "workspace:1.0.1",
    "@volatile/independent-reserve-api": "workspace:1.0.1",
    "@volatile/kanye": "workspace:1.0.1",
    "@volatile/keyring": "workspace:1.0.0",
    "@volatile/kiwi-coin-api": "workspace:1.0.1",
    "@volatile/market-price": "workspace:1.0.0",
    "@volatile/open-exchange-rates-api": "workspace:1.0.0",
    "bcrypt": "5.0.1",
    "date-fns": "2.29.2",
    "debug": "4.3.4",
    "dotenv": "16.0.1",
    "fastify": "4.5.2",
    "graphile-worker": "0.13.0",
    "njwt": "1.2.0",
    "nodemailer": "6.7.8",
    "otplib": "12.0.1",
    "pg": "8.7.3",
    "qrcode": "1.5.1",
    "rambda": "7.2.1",
    "stripe": "10.3.0",
    "zapatos": "6.0.1",
    "zod": "3.18.0"
  },
  "__comment": "The following configs are managed by `npx @stayradiated/jsconfig`",
  "ava": {
    "verbose": true,
    "files": [
      "./dist/**/*.test.js"
    ]
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "prettier": true,
    "rules": {
      "@typescript-eslint/naming-convention": "off",
      "n/file-extension-in-import": "off",
      "ava/assertion-arguments": "off",
      "ava/no-ignored-test-files": [
        "error",
        {
          "files": [
            "**/src/**/*.test.ts"
          ],
          "extensions": [
            "ts"
          ]
        }
      ]
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  }
}
