{
  "name": "@stayradiated/kiwi-coin-api",
  "version": "1.0.1",
  "description": "A minimal kiwi-coin.com API client",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stayradiated/kiwi-coin.git"
  },
  "keywords": [
    "kiwi-coin.com",
    "api"
  ],
  "author": {
    "name": "George Czabania",
    "email": "george@czabania.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stayradiated/kiwi-coin/issues"
  },
  "homepage": "https://github.com/stayradiated/kiwi-coin#readme",
  "dependencies": {
    "debug": "4.3.1",
    "ky-universal": "0.9.1"
  },
  "devDependencies": {
    "@stayradiated/jsconfig": "1.9.0",
    "@types/debug": "4.1.5",
    "@types/node": "15.12.1",
    "ava": "3.15.0",
    "del-cli": "3.0.1",
    "np": "7.5.0",
    "typescript": "4.3.2",
    "xo": "0.40.2"
  },
  "scripts": {
    "tidy": "xo --fix",
    "test": "ava",
    "build": "del-cli dist && tsc",
    "publish": "np"
  },
  "__comment": "The following configs are managed by @stayradiated/jsconfig",
  "ava": {
    "verbose": true
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "prettier": true,
    "rules": {
      "ava/no-ignored-test-files": [
        "error",
        {
          "files": [
            "**/src/**/*.test.ts"
          ],
          "extensions": [
            "ts"
          ]
        }
      ],
      "unicorn/prefer-node-protocol": "off"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  }
}
