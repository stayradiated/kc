{
  "private": true,
  "name": "@volatile/dasset-api",
  "version": "1.0.1",
  "description": "A minimal dassetx.com API client",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stayradiated/volatile.git"
  },
  "keywords": [
    "dassetx.com",
    "api"
  ],
  "author": {
    "name": "George Czabania",
    "email": "george@czabania.com"
  },
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/stayradiated/volatile/issues"
  },
  "homepage": "https://github.com/stayradiated/volatile#readme",
  "dependencies": {
    "@northscaler/better-error": "0.1.0-dev.10",
    "@stayradiated/error-boundary": "1.13.0",
    "@volatile/kanye": "workspace:1.0.1"
  },
  "devDependencies": {
    "@types/node": "17.0.5",
    "ava": "3.15.0",
    "del-cli": "4.0.1",
    "dotenv": "10.0.0",
    "env-var": "7.1.1",
    "eslint-plugin-fp": "2.3.0",
    "nock": "13.2.1",
    "typescript": "4.5.4",
    "xo": "0.47.0"
  },
  "scripts": {
    "tidy": "xo --fix",
    "test": "ava",
    "build": "del-cli dist && tsc"
  },
  "__comment": "The following configs are managed by `npx @stayradiated/jsconfig`",
  "ava": {
    "verbose": true
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "prettier": true,
    "plugins": [
      "fp"
    ],
    "extends": [
      "plugin:fp/recommended"
    ],
    "rules": {
      "ava/assertion-arguments": "off",
      "ava/no-ignored-test-files": [
        "error",
        {
          "files": [
            "**/src/**/*.test.ts"
          ],
          "extensions": [
            "ts"
          ]
        }
      ],
      "unicorn/prefer-node-protocol": "off",
      "fp/no-unused-expression": "off",
      "fp/no-nil": "off",
      "fp/no-loops": "off",
      "fp/no-mutation": "off"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  }
}
