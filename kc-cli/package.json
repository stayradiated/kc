{
  "name": "@stayradiated/kc-cli",
  "version": "1.0.0",
  "description": "kiwi-coin.com CLI",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "ava",
    "tidy": "xo --fix",
    "build": "del-cli dist && tsc",
    "build:ncc": "ncc build ./src/index.ts -o ./dist/ncc && mv ./dist/ncc/index.js ./dist/ncc/kc-cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stayradiated/kc.git"
  },
  "keywords": [
    "kiwi-coin.com",
    "cli",
    "client",
    "terminal"
  ],
  "author": {
    "name": "George Czabania",
    "email": "george@czabania.com"
  },
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/stayradiated/kc/issues"
  },
  "bin": {
    "kiwi-coin": "./bin/kiwi-coin"
  },
  "homepage": "https://github.com/stayradiated/kc#readme",
  "dependencies": {
    "@stayradiated/kc-config": "workspace:1.0.0",
    "@stayradiated/kiwi-coin-api": "workspace:1.0.1",
    "@stayradiated/market-price": "workspace:1.0.0",
    "console-table-printer": "2.9.0",
    "luxon": "1.28.0",
    "rambda": "6.7.0",
    "table": "6.7.1",
    "yargs": "17.0.1"
  },
  "devDependencies": {
    "@stayradiated/jsconfig": "1.14.0",
    "@types/luxon": "1.27.1",
    "@types/yargs": "17.0.2",
    "@vercel/ncc": "0.28.6",
    "ava": "3.15.0",
    "del-cli": "4.0.0",
    "eslint-plugin-fp": "2.3.0",
    "typescript": "4.3.5",
    "xo": "0.41.0"
  },
  "__comment": "The following configs are managed by `npx @stayradiated/jsconfig`",
  "ava": {
    "verbose": true
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "prettier": true,
    "plugins": [
      "fp"
    ],
    "extends": [
      "plugin:fp/recommended"
    ],
    "rules": {
      "ava/assertion-arguments": "off",
      "ava/no-ignored-test-files": [
        "error",
        {
          "files": [
            "**/src/**/*.test.ts"
          ],
          "extensions": [
            "ts"
          ]
        }
      ],
      "unicorn/prefer-node-protocol": "off",
      "fp/no-unused-expression": "off",
      "fp/no-nil": "off",
      "fp/no-loops": "off",
      "fp/no-mutation": "off"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  }
}
