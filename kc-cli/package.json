{
  "name": "@stayradiated/kc-cli",
  "version": "1.0.0",
  "description": "kiwi-coin.com CLI",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "ava",
    "tidy": "xo --fix",
    "build": "del-cli dist && tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stayradiated/kc.git"
  },
  "keywords": [
    "kiwi-coin.com",
    "cli",
    "client",
    "terminal"
  ],
  "author": {
    "name": "George Czabania",
    "email": "george@czabania.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stayradiated/kc/issues"
  },
  "bin": {
    "kiwi-coin": "./bin/kiwi-coin"
  },
  "homepage": "https://github.com/stayradiated/kc#readme",
  "dependencies": {
    "@stayradiated/kc-config": "workspace:1.0.0",
    "@stayradiated/kiwi-coin-api": "workspace:1.0.1",
    "@stayradiated/market-price": "workspace:1.0.0",
    "console-table-printer": "2.9.0",
    "luxon": "1.27.0",
    "table": "6.7.1",
    "yargs": "17.0.1"
  },
  "devDependencies": {
    "@stayradiated/jsconfig": "1.10.0",
    "@types/luxon": "1.27.0",
    "@types/yargs": "17.0.0",
    "ava": "3.15.0",
    "del-cli": "4.0.0",
    "typescript": "4.3.4",
    "xo": "0.40.2"
  },
  "__comment": "The following configs are managed by `npx @stayradiated/jsconfig`",
  "ava": {
    "verbose": true
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "prettier": true,
    "rules": {
      "ava/no-ignored-test-files": [
        "error",
        {
          "files": [
            "**/src/**/*.test.ts"
          ],
          "extensions": [
            "ts"
          ]
        }
      ],
      "unicorn/prefer-node-protocol": "off"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  }
}
