{
  "name": "@stayradiated/kc-server",
  "version": "1.0.0",
  "description": "KC Server",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "ava",
    "tidy": "xo --fix --ignore ./src/zapatos",
    "build": "del-cli dist && tsc",
    "build:zapatos": "zapatos",
    "build:ncc": "ncc build ./src/index.ts -o ./dist/ncc && mv ./dist/ncc/index.js ./dist/ncc/kc-server.js",
    "start": "node ./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stayradiated/kc.git"
  },
  "keywords": [
    "bitcoin",
    "nz",
    "server"
  ],
  "author": {
    "name": "George Czabania",
    "email": "george@czabania.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stayradiated/kc/issues"
  },
  "homepage": "https://github.com/stayradiated/kc#readme",
  "devDependencies": {
    "@stayradiated/jsconfig": "1.11.0",
    "@types/pg": "8.6.0",
    "@types/uuid": "8.3.0",
    "@vercel/ncc": "0.28.6",
    "ava": "3.15.0",
    "del-cli": "4.0.0",
    "typescript": "4.3.5",
    "xo": "0.40.3"
  },
  "dependencies": {
    "@stayradiated/kc-config": "workspace:1.0.0",
    "@stayradiated/market-price": "workspace:1.0.0",
    "env-var": "7.0.1",
    "mem": "8.1.1",
    "pg": "8.6.0",
    "uuid": "8.3.2",
    "zapatos": "5.0.0"
  },
  "__comment": "The following configs are managed by `npx @stayradiated/jsconfig`",
  "ava": {
    "verbose": true
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "prettier": true,
    "rules": {
      "ava/no-ignored-test-files": [
        "error",
        {
          "files": [
            "**/src/**/*.test.ts"
          ],
          "extensions": [
            "ts"
          ]
        }
      ],
      "unicorn/prefer-node-protocol": "off"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  }
}
