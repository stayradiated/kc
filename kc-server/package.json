{
  "name": "@stayradiated/kc-server",
  "version": "1.0.0",
  "description": "KC Server",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dbmate": "./bin/dbmate -e DB_URL",
    "pretest": "./bin/dbmate -e TEST_DB_URL drop && ./bin/dbmate -e TEST_DB_URL --no-dump-schema up",
    "test": "pnpm pretest && NODE_ENV=test ava --node-arguments='--require dotenv/config'",
    "tidy": "xo --fix --ignore ./src/zapatos",
    "build": "del-cli dist && tsc",
    "build:zapatos": "zapatos",
    "build:ncc": "ncc build ./src/index.ts -o ./dist/ncc && mv ./dist/ncc/index.js ./dist/ncc/kc-server.js",
    "start": "NODE_ENV=production node --require 'dotenv/config' ./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stayradiated/kc.git"
  },
  "keywords": [
    "bitcoin",
    "nz",
    "server"
  ],
  "author": {
    "name": "George Czabania",
    "email": "george@czabania.com"
  },
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/stayradiated/kc/issues"
  },
  "homepage": "https://github.com/stayradiated/kc#readme",
  "devDependencies": {
    "@stayradiated/jsconfig": "1.14.0",
    "@types/bcrypt": "5.0.0",
    "@types/luxon": "2.0.0",
    "@types/pg": "8.6.1",
    "@vercel/ncc": "^0.29",
    "ava": "3.15.0",
    "del-cli": "4.0.1",
    "eslint-plugin-fp": "2.3.0",
    "type-fest": "2.0.0",
    "typescript": "4.3.5",
    "xo": "0.44.0"
  },
  "dependencies": {
    "@stayradiated/dasset-api": "workspace:1.0.1",
    "@stayradiated/error-boundary": "1.3.0",
    "@stayradiated/kc-keyring": "workspace:1.0.0",
    "@stayradiated/kiwi-coin-api": "workspace:1.0.1",
    "@stayradiated/market-price": "workspace:1.0.0",
    "bcrypt": "5.0.1",
    "debug": "4.3.2",
    "dotenv": "10.0.0",
    "env-var": "7.0.1",
    "fastify": "3.20.1",
    "luxon": "2.0.2",
    "njwt": "1.1.0",
    "otplib": "12.0.1",
    "pg": "8.7.1",
    "rambda": "6.9.0",
    "stripe": "8.168.0",
    "zapatos": "5.0.0"
  },
  "__comment": "The following configs are managed by `npx @stayradiated/jsconfig`",
  "ava": {
    "verbose": true
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "prettier": true,
    "plugins": [
      "fp"
    ],
    "extends": [
      "plugin:fp/recommended"
    ],
    "rules": {
      "ava/assertion-arguments": "off",
      "ava/no-ignored-test-files": [
        "error",
        {
          "files": [
            "**/src/**/*.test.ts"
          ],
          "extensions": [
            "ts"
          ]
        }
      ],
      "unicorn/prefer-node-protocol": "off",
      "fp/no-unused-expression": "off",
      "fp/no-nil": "off",
      "fp/no-loops": "off",
      "fp/no-mutation": "off"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  }
}
