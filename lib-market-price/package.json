{
  "private": true,
  "name": "@volatile/market-price",
  "version": "1.0.0",
  "description": "Get the price of bitcoin from various sources",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "ava",
    "tidy": "xo --fix",
    "build": "del-cli dist && tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stayradiated/volatile.git"
  },
  "keywords": [
    "binance",
    "price",
    "bitcoin",
    "ticker"
  ],
  "author": {
    "name": "George Czabania",
    "email": "george@czabania.com"
  },
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/stayradiated/volatile/issues"
  },
  "homepage": "https://github.com/stayradiated/volatile#readme",
  "dependencies": {
    "@volatile/lib-error": "workspace:*",
    "@stayradiated/error-boundary": "4.0.0",
    "@volatile/dasset-api": "workspace:*",
    "@volatile/independent-reserve-api": "workspace:*",
    "@volatile/kanye": "workspace:*",
    "@volatile/kiwi-coin-api": "workspace:*",
    "@volatile/open-exchange-rates-api": "workspace:*",
    "date-fns": "2.29.2"
  },
  "devDependencies": {
    "@types/debug": "4.1.7",
    "@types/node": "18.7.13",
    "@types/sinon": "10.0.13",
    "ava": "4.3.3",
    "del-cli": "5.0.0",
    "sinon": "14.0.0",
    "typescript": "4.8.2",
    "xo": "0.52.2"
  },
  "__comment": "The following configs are managed by `npx @stayradiated/jsconfig`",
  "ava": {
    "verbose": true
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "prettier": true,
    "rules": {
      "ava/assertion-arguments": "off",
      "ava/no-ignored-test-files": [
        "error",
        {
          "files": [
            "**/src/**/*.test.ts"
          ],
          "extensions": [
            "ts"
          ]
        }
      ]
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  }
}
