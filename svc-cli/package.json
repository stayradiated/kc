{
  "private": true,
  "author": {
    "name": "George Czabania",
    "email": "george@czabania.com"
  },
  "license": "GPL-3.0",
  "bin": {
    "volatile": "./bin/volatile"
  },
  "type": "module",
  "scripts": {
    "test": "echo 'no files to test...'",
    "tidy": "xo --fix --ignore *.graphql.ts",
    "build": "del-cli dist && tsc",
    "build:ncc": "ncc build ./src/index.ts --out ./dist/ncc --external web-streams-polyfill/ponyfill/es2018 && mv ./dist/ncc/index.js ./dist/ncc/cli.js",
    "graphql": "graphql-codegen --config ./graphql.codegen.cjs"
  },
  "dependencies": {
    "@stayradiated/error-boundary": "1.11.0",
    "ky": "0.28.7",
    "ky-universal": "0.9.1",
    "luxon": "2.2.0",
    "rambda": "7.0.1",
    "table": "6.7.5",
    "yargs": "17.3.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.3.1",
    "@graphql-codegen/introspection": "2.1.1",
    "@graphql-codegen/near-operation-file-preset": "2.2.3",
    "@graphql-codegen/typescript": "2.4.2",
    "@graphql-codegen/typescript-operations": "2.2.2",
    "@types/luxon": "2.0.8",
    "@types/yargs": "17.0.8",
    "@vercel/ncc": "^0.33",
    "ava": "3.15.0",
    "del-cli": "4.0.1",
    "eslint-plugin-fp": "2.3.0",
    "typescript": "4.5.4",
    "xo": "0.47.0"
  },
  "__comment": "The following configs are managed by `npx @stayradiated/jsconfig`",
  "ava": {
    "verbose": true
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "prettier": true,
    "plugins": [
      "fp"
    ],
    "extends": [
      "plugin:fp/recommended"
    ],
    "rules": {
      "ava/assertion-arguments": "off",
      "ava/no-ignored-test-files": [
        "error",
        {
          "files": [
            "**/src/**/*.test.ts"
          ],
          "extensions": [
            "ts"
          ]
        }
      ],
      "unicorn/prefer-node-protocol": "off",
      "fp/no-unused-expression": "off",
      "fp/no-nil": "off",
      "fp/no-loops": "off",
      "fp/no-mutation": "off"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  }
}
