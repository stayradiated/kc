{
  "name": "@volatile/svc-web-remix",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "tsc": "tsc --noEmit",
    "package": "NODE_OPTIONS='--require @lukalabs/esbuild-inject-plugin' remix build && ncc build ./build/index.js",
    "dev": "NODE_OPTIONS='--require=@lukalabs/esbuild-inject-plugin' remix dev",
    "start": "env-cmd remix-serve build",
    "tidy": "xo --fix --plugin=react --ignore=./app/graphql/generated.ts ./app",
    "codegen": "gql-gen --config graphql.codegen.js"
  },
  "dependencies": {
    "@floating-ui/react-dom": "1.0.0",
    "@remix-run/node": "1.7.0",
    "@remix-run/react": "1.7.0",
    "@remix-run/serve": "1.7.0",
    "@stayradiated/error-boundary": "4.0.0",
    "@stripe/react-stripe-js": "1.10.0",
    "@stripe/stripe-js": "1.35.0",
    "@volatile/lib-error": "workspace:*",
    "date-fns": "2.29.2",
    "date-fns-tz": "1.3.6",
    "graphql": "16.6.0",
    "graphql-request": "4.3.0",
    "graphql-tag": "2.12.6",
    "lightweight-charts": "3.8.0",
    "rambda": "7.2.1",
    "react": "18.2.0",
    "react-day-picker": "8.1.3",
    "react-dom": "18.2.0",
    "react-select": "5.4.0",
    "react-table": "7.8.0",
    "remix-domains": "0.3.2",
    "remix-utils": "3.3.0",
    "styled-components": "5.3.5",
    "tiny-invariant": "1.2.0",
    "ua-parser-js": "1.0.2",
    "zod": "3.18.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.11.8",
    "@graphql-codegen/introspection": "2.2.1",
    "@graphql-codegen/typescript": "2.7.3",
    "@graphql-codegen/typescript-graphql-request": "4.5.3",
    "@graphql-codegen/typescript-operations": "2.5.3",
    "@lukalabs/esbuild-inject-plugin": "1.0.2",
    "@lukalabs/esbuild-styled-components": "1.0.0",
    "@remix-run/dev": "1.7.0",
    "@remix-run/eslint-config": "1.7.0",
    "@types/node": "18.7.13",
    "@types/qs": "6.9.7",
    "@types/react": "18.0.17",
    "@types/react-dom": "18.0.6",
    "@types/react-table": "7.7.12",
    "@types/styled-components": "5.1.26",
    "@types/ua-parser-js": "0.7.36",
    "@vercel/ncc": "0.34.0",
    "env-cmd": "10.1.0",
    "eslint": "8.22.0",
    "typescript": "4.8.2",
    "xo": "0.52.2"
  },
  "engines": {
    "node": ">=14"
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "prettier": true,
    "rules": {
      "import/extensions": "off",
      "@typescript-eslint/naming-convention": "off",
      "n/file-extension-in-import": "off"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  }
}
